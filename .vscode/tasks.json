{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cmake",
			"label": "CMake: build",
			"command": "build",
			"targets": [
				"all"
			],
            "dependsOn": ["create_build_directory"], // Not really but we need it for build_gba_project
			"group": "build",
			"problemMatcher": [],
			"detail": "CMake template build task"
		},
		{
            "label": "build_gba_project",
            "type": "shell",
            "command": "make",
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "dependsOn": ["cmake"],
            "problemMatcher": []
        },
		{
            "label": "clean_project",
            "type": "shell",
            "command": "make clean",
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "dependsOn": ["cmake"],
            "problemMatcher": []
        }
	]
}