{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "Run cmake",
			"command": "cmake",
			"args": [
				".", "-B", "build"
			],
			"group": "build",
			"problemMatcher": [],
			"detail": "CMake build task",
			"options": {
				"cwd": "${workspaceFolder}"
			}
		},
		{
            "label": "Compile GBA Project",
            "type": "shell",
            "command": "make",
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
			"group": "build",
            "problemMatcher": []
        },
		{
            "label": "Clean GBA Project",
            "type": "shell",
            "command": "make clean",
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
			"group": "build",
            "dependsOn": ["cmake"],
            "problemMatcher": []
        }
	]
}